{% extends 'base.html.twig' %}

{% block title %}
    {{ post.name }} - {{ parent() }}
{% endblock %}

{% block body %}
    <h1>{{ post.name }}</h1>
    <p>{{ post.content }}</p>
    <p>{{ post.publishedAt.format('d/m/Y H:i:s') }}</p>

    {# ManyToOne #}
    <p>{{ post.postCategory.title }}</p>

    {# ManyToMany Tags #}
    <ul>
    {% for tag in post.tags %}
        <li>{{ tag.title }}</li>
    {% endfor %}
    </ul>
{% endblock %}
